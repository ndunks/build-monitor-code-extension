{
	"name": "esp-idf-build-command",
	"displayName": "ESP-IDF Build Command",
	"description": "Build flash and monitor from ESP-IDF Makefile style",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.x.x"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension",
	"contributes": {
		"commands": [
			{
				"command": "esp-idf-build-command.helloWorld",
				"title": "Hello World"
			}
		]
	},
	"taskDefinitions": [
		{
			"type": "make",
			"required": [
				"target"
			],
			"properties": {
				"target": {
					"type": "string",
					"description": "Makefile target, default is 'app monitor'"
				},
				"args": {
					"type": "array",
					"description": "Add arguments"
				}
			}
		}
	],
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w"
	},
	"devDependencies": {
		"@types/node": "14.x",
		"@types/vscode": "^1.61.0",
		"@vscode/test-electron": "^1.6.2",
		"typescript": "^4.4.3"
	},
	"dependencies": {}
}
