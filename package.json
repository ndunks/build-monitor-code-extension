{
	"name": "build-monitor",
	"displayName": "Build Monitor",
	"description": "Run build command and monitor, usefull for esp8266 RTOS SDK Development",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.x.x"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension",
	"contributes": {
		"commands": [
			{
				"command": "build-monitor.build",
				"title": "Build & Monitor"
			}
		],
		"configuration": {
			"title": "Build & Monitor",
			"properties": {
				"build-monitor.command": {
					"default": "make",
					"title": "Command",
					"type": "string"
				},
				"build-monitor.command_args": {
					"description": "Command arguments",
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						"CONFIG_SDK_PYTHON=python3",
						"-j3",
						"app-flash",
						"simple_monitor"
					]
				},
				"build-monitor.kill_signal": {
					"description": "Signal to stop monitor that send to child process",
					"type": "string",
					"enum": [
						"SIGABRT",
						"SIGALRM",
						"SIGBUS",
						"SIGCHLD",
						"SIGCONT",
						"SIGFPE",
						"SIGHUP",
						"SIGILL",
						"SIGINT",
						"SIGIO",
						"SIGIOT",
						"SIGKILL",
						"SIGPIPE",
						"SIGPOLL",
						"SIGPROF",
						"SIGPWR",
						"SIGQUIT",
						"SIGSEGV",
						"SIGSTKFLT",
						"SIGSTOP",
						"SIGSYS",
						"SIGTERM",
						"SIGTRAP",
						"SIGTSTP",
						"SIGTTIN",
						"SIGTTOU",
						"SIGUNUSED",
						"SIGURG",
						"SIGUSR1",
						"SIGUSR2",
						"SIGVTALRM",
						"SIGWINCH",
						"SIGXCPU",
						"SIGXFSZ",
						"SIGBREAK",
						"SIGLOST",
						"SIGINFO"
					],
					"default": "SIGINT"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w"
	},
	"devDependencies": {
		"@types/node": "14.x",
		"@types/vscode": "^1.61.0",
		"@vscode/test-electron": "^1.6.2",
		"typescript": "^4.4.3"
	},
	"dependencies": {}
}